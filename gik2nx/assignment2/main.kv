Screen:
    # Title and search section
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        # Title
        MDLabel:
            text: 'Weather'
            halign: 'center'
            font_style: 'H5'
            height: self.texture_size[1]

        # Search section
        MDTextField:
            id: country
            hint_text: 'Enter country'
            mode: 'rectangle'

        MDTextField:
            id: city
            hint_text: 'Enter city'
            mode: 'rectangle'

        # Button row
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)  # Space between buttons
            size_hint_y: None
            height: dp(48)

            # Spacers for centering buttons
            Widget:
                size_hint_x: 1

            # Get Weather button
            MDRaisedButton:
                text: 'Get Weather'
                size_hint_x: None
                width: dp(130)
                on_release: app.search(country.text, city.text)

            # Save to DB button
            MDRaisedButton:
                text: 'Save to DB'
                size_hint_x: None
                width: dp(130)
                on_release: app.save_to_db(country.text.lower(), city.text.lower())

            # Clear button
            MDRaisedButton:
                text: 'Clear'
                size_hint_x: None
                width: dp(130)
                on_release: app.clear()

            # Spacers for centering buttons
            Widget:
                size_hint_x: 1

        # Show weather information
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(120)

            # First row for Temperature and Humidity
            BoxLayout:
                orientation: 'horizontal'

                # Temperature
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 0

                    MDLabel:
                        text: 'Temperature'
                        halign: 'center'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: [0, 0]
                    MDLabel:
                        text: str(app.temperature)
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]

                # Humidity
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 0

                    MDLabel:
                        text: 'Humidity'
                        halign: 'center'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: [0, 0]
                    MDLabel:
                        text: str(app.humidity)
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]

            # Second row for Pressure and Visibility
            BoxLayout:
                orientation: 'horizontal'

                # Pressure
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 0

                    MDLabel:
                        text: 'Pressure'
                        halign: 'center'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: [0, 0]
                    MDLabel:
                        text: str(app.pressure)
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]

                # Visibility
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 0

                    MDLabel:
                        text: 'Visibility'
                        halign: 'center'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: [0, 0]
                    MDLabel:
                        text: str(app.visibility)
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]
